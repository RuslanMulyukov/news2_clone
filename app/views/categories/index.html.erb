<h1>Listing categories</h1>

<table>
  <tr>
    <th>Title</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @categories.each do |category| %>
  <tr>
    <td><%= category.title %></td>
    <td><%= link_to 'Show', user_category_path(current_user, category) %></td>
    <td><%= link_to 'Edit', edit_user_category_path(current_user, category) %></td>
    <td><%= link_to 'Destroy', user_category_path(current_user,category), :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

