<h1>Listing news</h1>

<table>
  <tr>
    <th>User</th>
    <th>Category</th>
    <th>Title</th>
    <th>Description</th>
    <th>Source</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @news.each do |news| %>
  <tr>
    <td><%= news.user_id %></td>
    <td><%= news.category_id %></td>
    <td><%= news.title %></td>
    <td><%= news.description %></td>
    <td><%= news.source %></td>
    <td><%= link_to 'Show', news %></td>
    <td><%= link_to 'Edit', edit_news_path(news) %></td>
    <td><%= link_to 'Destroy', news, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

